import java.util.Scanner;

public class Taxes {

    Scanner s = new Scanner(System.in);
    int cap = 20000;

    public static void main(String[] args)
    {
        new Taxes().StartProgramme();
    }

    void StartProgramme()
    {
        System.out.println("Declare your incomes.");
        int incomes = s.nextInt();
        float tax = 0;
        int quotient = incomes/cap;

        for (int i = 0; i < quotient+1; i++)
        {
            if(i>4){ i=4; quotient--; } //If you reach four or more iterations means that your incomes are in the maximum rating.

            if(i == quotient)
                tax += i * 0.1f * (incomes%cap);
            else
                tax += i * 0.1f * cap;
        }

        System.out.println("You have to pay " + tax + "â‚¬. \n" +
                "That's the " + (tax/incomes*100) + "% of your salary.");
    }
}
